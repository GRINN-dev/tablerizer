{
  "name": "tablerizer",
  "version": "1.3.0",
  "description": "ðŸŽ² Tablerizer - The PostgreSQL table export wizard! Generate SQL files for RBAC, RLS, triggers, and schema documentation",
  "main": "./lib/index.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "types": "./lib/index.d.ts"
    },
    "./cli": {
      "import": "./lib/cli.js",
      "types": "./lib/cli.d.ts"
    },
    "./config": {
      "import": "./lib/config.js",
      "types": "./lib/config.d.ts"
    },
    "./database": {
      "import": "./lib/database.js",
      "types": "./lib/database.d.ts"
    },
    "./generators": {
      "import": "./lib/generators.js",
      "types": "./lib/generators.d.ts"
    }
  },
  "bin": {
    "tablerizer": "bin/tablerizer.js"
  },
  "files": [
    "lib/**/*",
    "bin/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node bin/tablerizer.js",
    "help": "node bin/tablerizer.js --help",
    "version": "node bin/tablerizer.js --version",
    "clean": "rm -rf lib",
    "prepublishOnly": "npm run clean && npm run build",
    "release:patch": "npm version patch && git push origin main && git push origin --tags",
    "release:minor": "npm version minor && git push origin main && git push origin --tags",
    "release:major": "npm version major && git push origin main && git push origin --tags",
    "check": "npm run build && npm pack --dry-run"
  },
  "keywords": [
    "postgresql",
    "rbac",
    "rls",
    "row-level-security",
    "database",
    "privileges",
    "sql",
    "migration",
    "graphile",
    "table-export",
    "schema",
    "wizard",
    "permissions",
    "policies",
    "triggers",
    "constraints"
  ],
  "author": "louislec <louis@grinn.tech>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GRINN-dev/tablerizer.git"
  },
  "bugs": {
    "url": "https://github.com/GRINN-dev/tablerizer/issues"
  },
  "homepage": "https://github.com/GRINN-dev/tablerizer#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.22",
    "@types/pg": "^8.15.5",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "pg": "^8.16.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
